<h1>Sign Up</h1>
<div id="sign-up-form">
<%= form_with model: @new_user, url: sign_up_path do |form| %>
    <% if @new_user.errors.any? %>
    <div>
        <% @new_user.errors.full_messages.each do | message |  %>
            <div><%= message %></div>
        <%end%>
     </div>
    <%end%>
    
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name, placeholder: "John Doe" %>
    </div><br>
    <div>
        <%= form.label :email %><br>
        <%= form.text_field :email, placeholder: "johndoe@gmail.com" %>
    </div><br>
    <div>
        <%= form.label :password %><br>
        <%= form.password_field :password, placeholder: "password" %>
    </div><br>
    <div>
        <%= form.submit "Sign Up" %>
    </div>   
<%end%>
</div>