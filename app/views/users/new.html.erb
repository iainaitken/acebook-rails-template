<h1>Sign Up</h1>
<div id="sign-up-form">
<%= form_with model: @user, url: sign_up_path do |form| %>
    <div>
    <%= form.label :name %> <br>
    <%= form.text_field :name, placeholder: "John Doe" %>
    </div><br>
    <div>
    <%= form.label :email %><br>
    <%= form.text_field :email, placeholder: "johndoe@gmail.com" %>
    </div><br>
    <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, placeholder: "password" %>
    </div><br>

    <div>
        <%= form.submit "Sign Up" %>
    </div>
    
<%end%>
</div>